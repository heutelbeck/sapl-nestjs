{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
"emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
